<% new_form = Catalogs::NewForm::Component.new(errors: @errors, selected_category: @selected_category) %>

<%= modal_stream_show do %>
  <dialog class="modal">
    <div class="modal-box max-w-lg">
      <h3 class="text-lg font-bold mb-4">
        <%= new_form.modal_title %>
      </h3>

      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 modal-close-button">
          <%= component "icons/close" %>
        </button>
      </form>

      <%= render new_form %>
    </div>

    <form method="dialog" class="modal-backdrop">
      <button><span class="sr-only">close</span></button>
    </form>
  </dialog>
<% end %>
