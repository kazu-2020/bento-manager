<%= render(PageHeaderComponent.new(
  title: t("locations.index.title"),
  new_path: new_location_path
)) %>

<% if @locations.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @locations.each do |location| %>
      <%= render(LocationCardComponent.new(location: location)) %>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12 text-base-content/60">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>
    <p><%= t("locations.index.empty", default: "販売先が登録されていません") %></p>
  </div>
<% end %>
