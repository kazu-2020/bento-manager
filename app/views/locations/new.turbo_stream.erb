<%= modal_stream_show do %>
  <dialog class="modal">
    <div class="modal-box">
      <h3 class="text-lg font-bold mb-4"><%= t("locations.new.title") %></h3>

      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 modal-close-button">
          <%= icon "close" %>
        </button>
      </form>

      <%= render "modal_form", location: @location %>
    </div>

    <form method="dialog" class="modal-backdrop">
      <button><span class="sr-only">close</span></button>
    </form>
  </dialog>
<% end %>
