<div class="flex items-center justify-center gap-4 <%= extra_class %>"
     data-controller="quantity-stepper">

  <button type="button"
          class="btn btn-circle btn-outline btn-lg"
          aria-label="<%= t('.decrement') %>"
          data-action="quantity-stepper#decrement">
    <%= component "icons/minus", extra_class: "h-6 w-6" %>
  </button>

  <div class="flex items-center gap-2">
    <%= input %>
    <% if unit %>
      <span class="text-lg"><%= unit %></span>
    <% end %>
  </div>

  <button type="button"
          class="btn btn-circle btn-outline btn-lg"
          aria-label="<%= t('.increment') %>"
          data-action="quantity-stepper#increment">
    <%= component "icons/plus", extra_class: "h-6 w-6" %>
  </button>
</div>
