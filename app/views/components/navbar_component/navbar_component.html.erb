<%# Navbar - ヘッダーナビゲーション %>
<div class="navbar bg-base-100 border-b border-base-300 sticky top-0 z-50 backdrop-blur-sm bg-opacity-95">
  <%# モバイル用ハンバーガーメニュー %>
  <div class="flex-none lg:hidden">
    <label for="<%= drawer_id %>" aria-label="メニューを開く" class="btn btn-square btn-ghost">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-6 w-6 stroke-current">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </label>
  </div>

  <%# ロゴ・タイトル %>
  <div class="flex-1">
    <%= link_to root_path, class: "btn btn-ghost text-xl font-bold tracking-tight hover:bg-transparent" do %>
      <span class="text-2xl">🍱</span>
      <span class="bg-linear-to-r from-amber-600 to-orange-500 bg-clip-text text-transparent">
        弁当販売管理
      </span>
    <% end %>
  </div>

  <%# デスクトップ用右側メニュー %>
  <div class="hidden lg:flex items-center gap-2">
    <%# 将来的にユーザーメニューなどを追加 %>
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder">
        <div class="bg-neutral text-neutral-content w-10 rounded-full">
          <span class="text-sm">U</span>
        </div>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow-lg border border-base-200">
        <li><a class="justify-between">プロフィール</a></li>
        <li><a>設定</a></li>
        <li class="border-t border-base-200 mt-2 pt-2"><a>ログアウト</a></li>
      </ul>
    </div>
  </div>
</div>
