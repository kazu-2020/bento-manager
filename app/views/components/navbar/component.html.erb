<div class="navbar bg-base-200 sticky top-0 z-50 backdrop-blur-sm bg-opacity-95">
  <div class="flex-none lg:hidden">
    <label for="<%= drawer_id %>" aria-label="メニューを開く" class="btn btn-square btn-ghost">
      <%= helpers.icon "menu", size: :lg %>
    </label>
  </div>

  <div class="flex-1">
    <span class="text-xl font-bold tracking-tight text-base-content">
      <%= display_title %>
    </span>
  </div>

  <% if logout_path.present? %>
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <%= helpers.icon "settings", size: :lg %>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-40 p-2 shadow-lg border border-base-200">
        <li>
          <%= button_to logout_path, method: :post, class: "text-error hover:text-error", data: { turbo: false } do %>
            <%= t("rodauth.logout.button") %>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>
</div>
