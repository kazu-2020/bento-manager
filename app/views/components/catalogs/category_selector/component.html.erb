<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
  <% categories.each do |category| %>
    <a href="<%= new_with_category_path(category[:key]) %>"
       class="<%= card_classes(category[:key]) %>"
       data-turbo-frame="<%= Catalogs::NewForm::Component::MODAL_FRAME_ID %>">
      <div class="card-body items-center text-center py-6">
        <div class="mb-2">
          <%= component category[:icon], size: :xl %>
        </div>
        <h3 class="card-title text-base">
          <%= category[:name] %>
          <% if selected?(category[:key]) %>
            <span class="text-primary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </span>
          <% end %>
        </h3>
        <p class="text-sm text-base-content/70"><%= category[:description] %></p>
      </div>
    </a>
  <% end %>
</div>
