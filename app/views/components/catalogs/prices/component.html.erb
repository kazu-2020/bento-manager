<section id="<%= component_id %>" class="<%= card_classes %>" aria-labelledby="catalog-prices-heading">
  <div class="card-body">
    <%# ヘッダー %>
    <h2 id="catalog-prices-heading" class="card-title text-lg mb-4">
      <%= t(".title") %>
    </h2>

    <dl class="grid grid-cols-1 <%= 'sm:grid-cols-2' if show_bundle_price? %> gap-4">
      <%# 通常価格 %>
      <div class="bg-base-200/50 rounded-lg p-4 border border-base-300">
        <div class="flex items-center justify-between mb-1">
          <dt class="text-sm font-medium text-base-content/60">
            <%= t(".regular_price") %>
          </dt>
          <% if show_edit_buttons? %>
            <%= link_to price_edit_path(:regular),
                class: "btn btn-ghost btn-xs gap-1 group",
                data: { turbo_stream: true } do %>
              <span class="transition-transform group-hover:rotate-12">
                <%= helpers.icon "edit", size: :xs %>
              </span>
              <%= t(".edit") %>
            <% end %>
          <% end %>
        </div>
        <dd class="text-2xl font-bold text-primary">
          <% if regular_price_formatted %>
            <%= regular_price_formatted %>
          <% else %>
            <span class="text-base-content/40 text-base font-normal"><%= t(".not_set") %></span>
          <% end %>
        </dd>
      </div>

      <% if show_bundle_price? %>
        <%# セット価格 %>
        <div class="bg-base-200/50 rounded-lg p-4 border border-base-300">
          <div class="flex items-center justify-between mb-1">
            <dt class="text-sm font-medium text-base-content/60">
              <%= t(".bundle_price") %>
            </dt>
            <% if show_edit_buttons? %>
              <%= link_to price_edit_path(:bundle),
                  class: "btn btn-ghost btn-xs gap-1 group",
                  data: { turbo_stream: true } do %>
                <span class="transition-transform group-hover:rotate-12">
                  <%= helpers.icon "edit", size: :xs %>
                </span>
                <%= t(".edit") %>
              <% end %>
            <% end %>
          </div>
          <dd class="text-2xl font-bold text-secondary">
            <% if bundle_price_formatted %>
              <%= bundle_price_formatted %>
            <% else %>
              <span class="text-base-content/40 text-base font-normal"><%= t(".not_set") %></span>
            <% end %>
          </dd>
        </div>
      <% end %>
    </dl>
  </div>
</section>
