<%= helpers.turbo_frame_tag frame_id do %>
  <%= form_with model: catalog_price,
      url: form_url,
      method: :patch,
      data: { turbo_frame: frame_id } do |f| %>

    <div class="form-control mb-6">
      <%= f.label :price, class: "label" do %>
        <span class="label-text font-medium">
          <%= CatalogPrice.human_attribute_name(:price) %>
          <span class="text-error">*</span>
        </span>
      <% end %>
      <label class="input input-bordered flex items-center gap-2 <%= 'input-error' if catalog_price.errors[:price].any? %>">
        <span class="text-base-content/50">Â¥</span>
        <%= f.number_field :price,
            required: true,
            autofocus: true,
            min: 1,
            step: 1,
            autocomplete: "off",
            class: "grow bg-transparent focus:outline-none [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none",
            placeholder: t(".placeholder") %>
      </label>
      <% catalog_price.errors.where(:price).each do |error| %>
        <p class="text-sm text-error mt-1"><%= error.full_message %></p>
      <% end %>
    </div>

    <div class="modal-action">
      <button type="submit" formmethod="dialog" formnovalidate class="btn btn-ghost">
        <%= t("helpers.link.cancel") %>
      </button>
      <%= f.submit t(".submit"), class: "btn btn-neutral" %>
    </div>
  <% end %>
<% end %>
