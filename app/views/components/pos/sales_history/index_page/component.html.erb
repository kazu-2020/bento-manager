<div class="min-h-screen bg-base-200 flex flex-col pb-16 lg:pb-0">
  <main class="flex-1 p-4">
    <%# 当日売上サマリー %>
    <%= render_daily_summary %>

    <%# 販売履歴リスト %>
    <h2 class="text-lg font-bold mb-3"><%= t(".sales_list") %></h2>

    <% if has_sales? %>
      <div class="space-y-3">
        <% sales.each do |sale| %>
          <%= render_sale_item_card(sale) %>
        <% end %>
      </div>
    <% else %>
      <%= render_empty_state %>
    <% end %>
  </main>

  <%# モバイル用フッターナビゲーション %>
  <%= component "pos/dock", location: location, current_path: helpers.request.path %>
</div>
