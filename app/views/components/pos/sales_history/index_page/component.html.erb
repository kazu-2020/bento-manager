<div class="min-h-screen bg-base-200 flex flex-col">
  <main class="flex-1 p-4 pb-24">
    <%# 当日売上サマリー %>
    <%= render_daily_summary %>

    <%# 販売履歴リスト %>
    <h2 class="text-lg font-bold mb-3"><%= t(".sales_list") %></h2>

    <% if has_sales? %>
      <div class="space-y-3">
        <% sales.each do |sale| %>
          <%= render_sale_item_card(sale) %>
        <% end %>
      </div>
    <% else %>
      <%= render_empty_state %>
    <% end %>
  </main>

  <%# 固定フッター %>
  <footer class="fixed bottom-0 left-0 right-0 bg-base-100 border-t border-base-300 p-4 safe-area-pb">
    <%= link_to back_url, class: "btn btn-neutral btn-lg w-full" do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      <%= t(".back") %>
    <% end %>
  </footer>
</div>
