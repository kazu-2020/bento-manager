<div class="card bg-base-100 border border-base-300 <%= 'ring-2 ring-error' if selected? %>">
  <div class="card-body p-4">
    <label class="flex items-center gap-4 cursor-pointer">
      <%# チェックボックス（hidden field でデフォルト値 "0" を設定） %>
      <div class="flex-shrink-0">
        <%= hidden_field_tag field_name, "0" %>
        <%= check_box_tag field_name, "1", selected?,
                          id: checkbox_id,
                          class: "checkbox checkbox-error checkbox-lg",
                          data: { action: "change->refund-cart#toggle" } %>
      </div>

      <%# 商品情報 %>
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-1">
          <span class="badge <%= category_badge_class %> badge-sm"><%= category_label %></span>
          <span class="font-bold truncate"><%= catalog_name %></span>
        </div>
        <div class="flex justify-between text-sm text-base-content/70">
          <span><%= formatted_unit_price %> x <%= quantity %></span>
          <span class="font-medium"><%= formatted_line_total %></span>
        </div>
      </div>

      <%# 返品マーク %>
      <% if selected? %>
        <div class="flex-shrink-0">
          <span class="badge badge-error gap-1">
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            <%= t(".refund") %>
          </span>
        </div>
      <% end %>
    </label>
  </div>
</div>
