<div data-controller="ghost-form refund-cart"
     data-action="refund-cart:cartChanged->ghost-form#submit">
  <%# top-16 (4rem): navbar の高さ分オフセット %>
  <div class="fixed inset-x-0 top-16 bottom-0 z-20 bg-base-200 flex flex-col">
    <%# 返品処理フォーム %>
    <%= form_with **form_with_options,
                  class: "flex flex-col flex-1 min-h-0",
                  data: { ghost_form_target: "originalForm" } do |f| %>
      <%= hidden_field_tag "sale_id", sale.id %>

      <%# スクロール領域 %>
      <main class="flex-1 overflow-y-auto p-4 pb-48">
        <%# 元の販売内容 %>
        <%= component "pos/refunds/original_sale_summary", sale: sale %>

        <%# 返品商品選択 %>
        <div class="mt-6">
          <h3 class="text-lg font-bold mb-3">
            <svg class="w-5 h-5 inline-block mr-1 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            <%= t(".select_items") %>
          </h3>
          <div class="space-y-3">
            <% items.each do |item| %>
              <%= component "pos/refunds/item_selector", item: item, form: f %>
            <% end %>
          </div>
        </div>

        <%# 返品理由 %>
        <div class="mt-6">
          <h3 class="text-lg font-bold mb-3">
            <svg class="w-5 h-5 inline-block mr-1 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <%= t(".reason_label") %>
          </h3>
          <div class="card bg-base-100 border border-base-300">
            <div class="card-body p-4">
              <%= text_area_tag "refund[reason]",
                                form.reason,
                                class: "textarea textarea-bordered w-full",
                                placeholder: t(".reason_placeholder"),
                                rows: 3 %>
            </div>
          </div>
        </div>

        <%# 返金プレビュー %>
        <div id="refund-preview" class="mt-6">
          <%= component "pos/refunds/corrected_sale_preview", form: form %>
          <%= component "pos/refunds/refund_amount_display", form: form %>
        </div>
      </main>

      <%# フッター %>
      <footer class="shrink-0 bg-base-100 border-t border-base-300">
        <div class="p-4 safe-area-pb">
          <div class="flex gap-3">
            <%= link_to back_url, class: "btn btn-neutral btn-lg flex-1" do %>
              <%= t(".back") %>
            <% end %>
            <%= component "pos/refunds/submit_button", form: form %>
          </div>
        </div>
      </footer>
    <% end %>
  </div>

  <%# Ghost Form %>
  <%= component "pos/refunds/ghost_form", form: form, sale: sale, location: location %>
</div>
