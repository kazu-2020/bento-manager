<div id="coupon-section" class="mb-6">
  <h2 class="flex items-center gap-2 text-lg font-bold mb-3">
    <span>üéüÔ∏è</span>
    <span><%= t(".title") %></span>
  </h2>

  <% if has_discounts? %>
    <div class="space-y-3">
      <% discounts.each do |discount| %>
        <div class="card bg-base-100 border border-base-300">
          <div class="card-body p-4">
            <div class="flex items-center justify-between mb-2">
              <div>
                <span class="font-medium"><%= discount.name %></span>
                <% if discount_amount_display(discount) %>
                  <span class="text-accent text-sm ml-1">-<%= discount_amount_display(discount) %>/Êûö</span>
                <% end %>
              </div>
            </div>

            <% disabled = coupon_disabled?(discount) %>
            <% max_qty = max_coupon_quantity(discount) %>
            <% current_qty = coupon_quantity(discount) %>

            <% if disabled || max_qty <= 0 %>
              <p class="text-sm text-base-content/50"><%= t(".requires_bento") %></p>
            <% else %>
              <%= component "inputs/quantity_stepper" do |c| %>
                <% c.with_input do %>
                  <%= number_field_tag "cart[coupon][#{discount.id}]",
                        current_qty,
                        min: 0, max: max_qty, autocomplete: "off",
                        class: "input input-bordered w-20 text-center text-2xl font-bold",
                        data: {
                          quantity_stepper_target: "input",
                          action: "change->pos-cart#couponChanged"
                        } %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
