<div id="coupon-section">
  <% if has_discounts? %>
    <div class="space-y-3">
      <% discounts.each do |discount| %>
        <% disabled = coupon_disabled?(discount) %>
        <% max_qty = max_coupon_quantity(discount) %>
        <% current_qty = coupon_quantity(discount) %>

        <div class="relative">
          <div class="<%= coupon_card_classes(discount) %>">
            <div class="card-body p-4">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <span class="font-medium text-lg"><%= discount.name %></span>
                  <% if discount_amount_display(discount) %>
                    <span class="text-base-content/60 text-sm ml-2">-<%= discount_amount_display(discount) %>/æžš</span>
                  <% end %>
                </div>
              </div>

              <div class="mt-3">
                <%= component "inputs/quantity_stepper" do |c| %>
                  <% c.with_input do %>
                    <%= number_field_tag "cart[coupon][#{discount.id}]",
                          current_qty,
                          min: 0, max: (disabled ? 0 : max_qty), autocomplete: "off",
                          class: "input input-bordered w-20 text-center text-2xl font-bold",
                          data: {
                            quantity_stepper_target: "input",
                            action: "change->pos-cart#couponChanged"
                          } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>

          <% if disabled || max_qty <= 0 %>
            <div class="absolute inset-0 flex items-center justify-center z-10">
              <span class="badge badge-warning badge-soft font-bold"><%= t(".requires_bento") %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
