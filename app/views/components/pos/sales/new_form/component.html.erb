<div data-controller="ghost-form pos-cart"
     data-action="pos-cart:cartChanged->ghost-form#submit">
  <div class="min-h-screen bg-base-200 flex flex-col">
    <%# „Éò„ÉÉ„ÉÄ„Éº %>
    <header class="sticky top-0 bg-base-100 shadow-sm z-10">
      <div class="px-4 py-3">
        <div class="flex items-center gap-3">
          <%= link_to back_url, class: "btn btn-ghost btn-sm btn-circle" do %>
            <%= component "icons/arrow_left", extra_class: "h-5 w-5" %>
          <% end %>
          <div class="flex-1">
            <h1 class="text-lg font-bold"><%= location_name %></h1>
            <p class="text-sm text-base-content/60"><%= t(".title_suffix") %></p>
          </div>
        </div>
      </div>
    </header>

    <%# Original Form (Ë≤©Â£≤Âá¶ÁêÜ„ÇíË°å„ÅÜ„Éï„Ç©„Éº„É†) %>
    <%= form_with **form_with_options,
                  data: { ghost_form_target: "originalForm" } do |f| %>
      <main class="flex-1 p-4 pb-56">
        <% if has_items? %>
          <div data-controller="tabs">
            <%# „Çø„Éñ„Éê„Éº %>
            <div role="tablist" class="tabs tabs-lift mb-6">
              <% tab_items.each_with_index do |tab, i| %>
                <button type="button" role="tab"
                        class="tab min-h-12 flex-1 text-base font-medium <%= "tab-active" if i == 0 %>"
                        data-tabs-target="tab"
                        data-action="tabs#select">
                  <%= tab[:label] %>
                </button>
              <% end %>
            </div>

            <%# „Çø„Éñ„Éë„Éç„É´ %>
            <% tab_items.each_with_index do |tab, i| %>
              <div data-tabs-target="panel" <%= "hidden" unless i == 0 %>>
                <% case tab[:key] %>
                <% when :bento %>
                  <div class="space-y-3">
                    <% bento_items.each do |item| %>
                      <%= component "pos/sales/product_card", item: item %>
                    <% end %>
                  </div>
                <% when :side_menu %>
                  <div class="space-y-3">
                    <% side_menu_items.each do |item| %>
                      <%= component "pos/sales/product_card", item: item %>
                    <% end %>
                  </div>
                <% when :coupon %>
                  <%= component "pos/sales/coupon_section", form: form %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12 text-base-content/60">
            <div class="text-6xl mb-4">üç±</div>
            <p><%= t(".no_inventories") %></p>
          </div>
        <% end %>
      </main>

      <%# Âõ∫ÂÆö„Éï„ÉÉ„Çø„Éº %>
      <footer class="fixed bottom-0 left-0 right-0 bg-base-100 border-t border-base-300 z-10">
        <div class="p-4 safe-area-pb">
          <%# ‰æ°Ê†ºÂÜÖË®≥ %>
          <%= component "pos/sales/price_breakdown", form: form %>

          <div class="divider my-2"></div>

          <%# È°ßÂÆ¢Âå∫ÂàÜ + Ë≤©Â£≤Á¢∫ÂÆö„Éú„Çø„É≥ %>
          <%= component "pos/sales/submit_button", form: form %>
        </div>
      </footer>
    <% end %>

    <%# Ghost Form (ÁîªÈù¢Êõ¥Êñ∞Áî®„ÅÆÂπΩÈúä„Éï„Ç©„Éº„É†) %>
    <%= component "pos/sales/ghost_form", form: form %>
  </div>
</div>
