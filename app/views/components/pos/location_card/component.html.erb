<%= link_to card_url, class: card_classes, data: { turbo: false } do %>
  <div class="card-body p-4">
    <h2 class="card-title text-lg"><%= name %></h2>
    <% unless has_today_inventory? %>
      <div class="flex items-center gap-1 text-warning text-sm">
        <%= helpers.icon "warning", extra_class: "h-4 w-4" %>
        <span><%= t(".no_inventory_warning") %></span>
      </div>
    <% end %>
  </div>
<% end %>
