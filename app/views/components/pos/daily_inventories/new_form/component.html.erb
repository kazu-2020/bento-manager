<div data-controller="ghost-form">
  <div class="min-h-screen bg-base-200 flex flex-col">
    <%# „Éò„ÉÉ„ÉÄ„Éº %>
    <header class="sticky top-0 bg-base-100 shadow-sm z-10">
      <div class="px-4 py-3">
        <div class="flex items-center gap-3">
          <%= link_to back_url, class: "btn btn-ghost btn-sm btn-circle" do %>
            <%= component "icons/arrow_left", extra_class: "h-5 w-5" %>
          <% end %>
          <div class="flex-1">
            <h1 class="text-lg font-bold"><%= location_name %> <%= t(".title_suffix") %></h1>
            <p class="text-sm text-base-content/60"><%= today_date %></p>
          </div>
        </div>
      </div>
    </header>

    <%# Original Form (Êú¨Êù•„ÅÆÂá¶ÁêÜ„ÇíË°å„ÅÜ„Éï„Ç©„Éº„É†) %>
    <%= form_with **form_with_options,
                  data: { ghost_form_target: "originalForm" } do |f| %>
      <main class="flex-1 p-4 pb-24">
        <p class="text-center text-base-content/70 mb-6"><%= t(".instruction") %></p>

        <% if has_items? %>
          <div id="bento-cards" class="space-y-3">
            <% items.each do |item| %>
              <%= render_bento_card(item) %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12 text-base-content/60">
            <%= component "icons/bento", extra_class: "h-12 w-12 mx-auto mb-4 opacity-50" %>
            <p><%= t(".no_catalogs") %></p>
          </div>
        <% end %>
      </main>

      <%# Âõ∫ÂÆö„Éï„ÉÉ„Çø„Éº %>
      <footer class="fixed bottom-0 left-0 right-0 bg-base-100 border-t border-base-300 p-4 safe-area-pb">
        <div id="submit-button">
          <%= f.button class: "btn btn-accent btn-lg w-full gap-2",
                      disabled: !valid? do %>
            <span class="text-xl">üç±</span>
            <span><%= t(".submit_label") %></span>
            <span class="badge badge-neutral"><%= selected_count %></span>
            <span><%= t(".submit_unit") %></span>
          <% end %>
        </div>
      </footer>
    <% end %>

    <%# Ghost Form (ÁîªÈù¢Êõ¥Êñ∞Áî®„ÅÆÂπΩÈúä„Éï„Ç©„Éº„É†) %>
    <%= form_with **form_state_options,
                  id: "ghost-form",
                  data: { turbo_stream: true, ghost_form_target: "ghostForm" } do |f| %>
      <% items.each do |item| %>
        <%= hidden_field_tag "ghost_inventory[#{item.catalog_id}][selected]", item.selected? ? "1" : "0" %>
        <%= hidden_field_tag "ghost_inventory[#{item.catalog_id}][stock]", item.stock %>
      <% end %>
    <% end %>
  </div>
</div>
