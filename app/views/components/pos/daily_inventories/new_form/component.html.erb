<div data-controller="ghost-form">
  <div class="min-h-screen bg-base-200 flex flex-col">
    <%# ヘッダー %>
    <header class="sticky top-0 bg-base-100 shadow-sm z-10">
      <div class="px-4 py-3">
        <div class="flex items-center gap-3">
          <%= link_to back_url, class: "btn btn-ghost btn-sm btn-circle" do %>
            <%= helpers.icon "arrow_left", extra_class: "h-5 w-5" %>
          <% end %>
          <div class="flex-1">
            <h1 class="text-lg font-bold"><%= location_name %> <%= t(".title_suffix") %></h1>
            <p class="text-sm text-base-content/60"><%= today_date %></p>
          </div>
        </div>
      </div>
    </header>

    <%# Original Form (本来の処理を行うフォーム) %>
    <%= form_with **form_with_options,
                  data: { ghost_form_target: "originalForm" } do |f| %>
      <% if has_items? %>
        <div data-controller="tabs" class="flex flex-col flex-1 min-h-0">
          <%# タブバー %>
          <div class="shrink-0 bg-base-200 px-4 pt-2">
            <p class="text-center text-base-content/70 mb-4"><%= t(".instruction") %></p>
            <div role="tablist" class="tabs tabs-lift">
              <% tab_items.each_with_index do |tab, i| %>
                <%= button_tag tab[:label], type: :button, role: :tab,
                      class: "tab min-h-12 flex-1 text-base font-medium #{"tab-active" if i == 0}",
                      data: { tabs_target: "tab", action: "tabs#select" } %>
              <% end %>
            </div>
          </div>

          <%# タブパネル（スクロール領域） %>
          <main class="flex-1 overflow-y-auto p-4 pb-24">
            <% tab_items.each_with_index do |tab, i| %>
              <div data-tabs-target="panel" <%= "hidden" unless i == 0 %>>
                <% case tab[:key] %>
                <% when :bento %>
                  <div class="space-y-3">
                    <% bento_items.each do |item| %>
                      <%= render_item_card(item) %>
                    <% end %>
                  </div>
                <% when :side_menu %>
                  <div class="space-y-3">
                    <% side_menu_items.each do |item| %>
                      <%= render_item_card(item) %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </main>
        </div>
      <% else %>
        <main class="flex-1 p-4 pb-24">
          <p class="text-center text-base-content/70 mb-6"><%= t(".instruction") %></p>
          <div class="text-center py-12 text-base-content/60">
            <%= helpers.icon "bento", extra_class: "h-12 w-12 mx-auto mb-4 opacity-50" %>
            <p><%= t(".no_catalogs") %></p>
          </div>
        </main>
      <% end %>

      <%# 固定フッター（モバイルでは Dock の上に配置） %>
      <footer class="fixed bottom-16 lg:bottom-0 left-0 right-0 lg:left-72 bg-base-100 border-t border-base-300 p-4 safe-area-pb">
        <%= render_submit_button %>
      </footer>
    <% end %>

    <%# Ghost Form (画面更新用の幽霊フォーム) %>
    <%= render_ghost_form %>

    <%# モバイル用フッターナビゲーション %>
    <%= component "pos/dock", location: location, current_path: helpers.request.path %>
  </div>
</div>
