<div class="min-h-screen bg-base-200 flex flex-col">
  <main class="flex-1 p-4 pb-24">
    <%# ヘルプメッセージ %>
    <div class="alert alert-info alert-soft mb-2">
      <svg class="w-5 h-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="text-sm"><%= t(".help_line_message") %></span>
    </div>
    <div class="alert alert-warning mb-4">
      <svg class="w-5 h-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M10.29 3.86l-8.6 14.86A1 1 0 002.54 20h16.92a1 1 0 00.85-1.47l-8.6-14.86a1 1 0 00-1.71 0z" />
      </svg>
      <span class="text-sm"><%= t(".help_no_edit_message") %></span>
    </div>

    <%# 在庫総数 %>
    <%= render_inventory_summary %>

    <%# 発注履歴 %>
    <%= render_history_list %>
  </main>

  <%# 固定フッター %>
  <footer class="fixed bottom-0 left-0 right-0 bg-base-100 border-t border-base-300 p-4 safe-area-pb">
    <%= link_to new_order_url, class: "btn btn-neutral btn-lg w-full" do %>
      <%= t(".new_order_button") %>
    <% end %>
  </footer>
</div>
