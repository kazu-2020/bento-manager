<!DOCTYPE html>
<html data-theme="bumblebee">
  <head>
    <%= render "shared/head" %>
  </head>

  <body class="min-h-screen bg-base-200">
    <div class="drawer lg:drawer-open">
      <input id="main-drawer" type="checkbox" class="drawer-toggle" />

      <div class="drawer-content flex flex-col">
        <%= component "navbar" %>

        <div id="flash_messages" class="mx-4 mt-4">
          <% if notice.present? %>
            <div class="alert alert-success shadow-sm mb-4">
              <%= component "icons/success", extra_class: "shrink-0" %>
              <span><%= notice %></span>
            </div>
          <% end %>

          <% if alert.present? %>
            <div class="alert alert-error shadow-sm mb-4">
              <%= component "icons/error", extra_class: "shrink-0" %>
              <span><%= alert %></span>
            </div>
          <% end %>
        </div>

        <main class="flex-1 p-6">
          <div class="max-w-6xl mx-auto">
            <%= yield %>
          </div>
        </main>

        <footer class="footer footer-center p-4 bg-base-200 text-base-content border-t border-base-300 lg:hidden">
          <p class="text-sm">&copy; <%= Date.current.year %> 弁当販売管理</p>
        </footer>
      </div>

      <div class="drawer-side z-40">
        <label for="main-drawer" aria-label="メニューを閉じる" class="drawer-overlay"></label>
        <%= component "sidebar", current_path: request.path %>
      </div>
    </div>

    <turbo-stream-modal-container></turbo-stream-modal-container>
  </body>
</html>
