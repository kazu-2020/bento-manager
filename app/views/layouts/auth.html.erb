<!DOCTYPE html>
<html data-theme="bumblebee">
  <head>
    <%= render "shared/head" %>
  </head>

  <body class="min-h-screen bg-base-200 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <% if @auth_title.present? %>
            <h1 class="card-title text-2xl font-bold justify-center mb-2"><%= @auth_title %></h1>
          <% elsif @page_title.present? %>
            <h1 class="card-title text-2xl font-bold justify-center mb-2"><%= @page_title %></h1>
          <% end %>

          <% if flash[:alert].present? %>
            <div role="alert" class="alert alert-error alert-soft">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><%= flash[:alert] %></span>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>

      <div class="text-center mt-6 text-base-content/60 text-sm">
        <a href="/" class="link link-hover">Bento Manager</a>
      </div>
    </div>
  </body>
</html>
