<title><%= content_for(:title) || "Bento Manager" %></title>
<meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="application-name" content="Bento Manager">
<meta name="mobile-web-app-capable" content="yes">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<%= yield :head %>

<%= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

<link rel="icon" href="/icon-96x96.png" type="image/png" sizes="96x96">
<link rel="apple-touch-icon" href="/icon-152x152.png">

<script>
  if ("serviceWorker" in navigator) {
    navigator.serviceWorker.register("/service-worker.js");
  }
</script>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Noto+Sans+Mono:wght@700&display=swap" rel="stylesheet">

<%= vite_stylesheet_tag 'stylesheets/application.tailwind.css' %>

<%= vite_client_tag %>
<%= vite_javascript_tag 'application' %>
