<%# ヘッダー（ステータスバッジ含む）を更新 %>
<%= turbo_stream.replace Discounts::Show::Component::HEADER_FRAME_ID do %>
  <%= turbo_frame_tag Discounts::Show::Component::HEADER_FRAME_ID do %>
    <% show_component = Discounts::Show::Component.new(discount: @discount) %>
    <header class="flex items-center justify-between mb-6">
      <div class="flex items-center gap-3">
        <%= component "icons/ticket", size: :lg, extra_class: "text-primary" %>
        <h1 class="text-2xl font-bold text-base-content"><%= @discount.name %></h1>
        <%= component "discounts/status_badge", status: show_component.status %>
      </div>
    </header>
  <% end %>
<% end %>

<%# 有効期間セクションを更新 %>
<%= turbo_stream.replace Discounts::BasicInfo::Component::FRAME_ID do %>
  <%= component "discounts/basic_info", discount: @discount %>
<% end %>

<%# トースト通知を表示 %>
<%= toast_stream_show(t("discounts.update.success"), type: :success) %>
