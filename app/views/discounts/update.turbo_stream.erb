<%# 編集されたセクションを更新 %>
<% case @edit_section %>
<% when :basic_info %>
  <%= turbo_stream.replace Discounts::BasicInfo::Component::FRAME_ID do %>
    <%= component "discounts/basic_info", discount: @discount %>
  <% end %>
<% when :coupon_info %>
  <%= turbo_stream.replace Discounts::CouponInfo::Component::FRAME_ID do %>
    <%= component "discounts/coupon_info", discount: @discount %>
  <% end %>
<% end %>

<%# トースト通知を表示 %>
<%= toast_stream_show(t("discounts.update.success"), type: :success) %>
