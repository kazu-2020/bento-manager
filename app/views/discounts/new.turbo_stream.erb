<% new_form = Discounts::NewForm::Component.new(discount: @discount) %>

<%= modal_stream_show do %>
  <dialog class="modal">
    <div class="modal-box max-w-lg">
      <turbo-frame id="<%= Discounts::NewForm::Component::MODAL_FRAME_ID %>">
        <%= render partial: "modal_header", formats: [:html], locals: { new_form: new_form } %>
        <%= render new_form %>
      </turbo-frame>
    </div>

    <form method="dialog" class="modal-backdrop">
      <button><span class="sr-only">close</span></button>
    </form>
  </dialog>
<% end %>
